<div class= "userFollowList">

  <div class= "userFollowList_header_container">
    <div class= "userFollowList_backBtn">
      <%= link_to "⇦", user_path(@user), class: "link", style: "color: black;" %>
    </div>
    <div class= "userFollowList_myUserNickname">
    <%= @user.nickname %>
    </div>
  </div>

  <div class= "userFollowList_btn_box">
    <%= link_to(follow_list_user_path(@user, target: "following"), class: "userFollowList_follow_btn") do %>
      <div class= "userFollowList_follow_btn_box">
        <span class= "userFollowList_follow_btn_text <%= 'active' if @title == 'フォロー中' %>">フォロー中</span>
      </div>
    <% end %>
    <%= link_to(follow_list_user_path(@user, target: "follower"), class: "userFollowList_follow_btn") do %>
      <div class= "userFollowList_follow_btn_box">
        <span class= "userFollowList_follow_btn_text <%= 'active' if @title == "フォロワー" %>">フォロワー</span>
      </div>
    <% end %>
  </div>

  <div class= "userFollowList_users">
    <% @users.each do |user| %>
      <div class= "userFollowList_user">
        <div class= "userFollowList_user_info_container">
          <%= link_to(user_path(user), class: "link", style: "color: black;") do %>
            <div class= "userFollowList_info_box">
              <div class= "userFollowList_nickname_box">
                <% if user.icon.attached?%>
                  <%= image_tag user.icon, class: "user_icon", alt: "User Icon" %>
                <% end %>
                <div class= "userFollowList_userNickname"><%= user.nickname %></div>
              </div>
              <div class= "userFollowList_userEmail"><%= user.email %></div>
            </div>
          <% end %>
          <% if user.followed_by?(current_user) %>
            <%= link_to(user_relationships_path(user_id: user.id), data: {turbo_confirm: "「#{user.nickname}」へのフォローを解除します。よろしいですか？", turbo_method: :delete }, class: "link", style: "color: black;") do %>
              <div class= "project_userFollowed_btn">フォロー解除</div>
            <% end %>
          <% else %>
            <%= link_to(user_relationships_path(user_id: user.id), data: {turbo_method: :post}, class: "link", style: "color: black;") do %>
              <div class= "project_userFollowing_btn">フォローする</div>
            <% end %>
          <% end %>
        </div>
        <%= link_to(user_path(user), class: "link", style: "color: black;") do %>
          <div class= "userFollowList_profile"><%= user.profile %></div>
        <% end %>
      </div>
    <% end %>
  </div>

</div>