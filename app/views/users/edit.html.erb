<div class= "form_wrapper">

  <div class= "form_title_box">
    <span class= "form_title">アカウント編集</span>
  </div>

  <%= form_with model: current_user, url: user_path(current_user), local: true, class: "form" do |f| %>
    <div class= "field">
      <%= f.label :nickname %><br />
      <%= f.text_field :nickname, autofocus: true %>
    </div>

    <div class= "field">
      <%= f.label :profile %><br />
      <%= f.text_area :profile %>
    </div>

    <div class= "field">
      <%= f.label :email %><br />
      <%= f.email_field :email %>
    </div>

    <div class="actions">
      <%= f.submit "update" %>
    </div>
  <% end %>

</div>
