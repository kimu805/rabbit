<% if flash[:notice] %>
  <div id="flash-message" class="flash-message <%= flash[:notice] ? 'notice' : flash[:alert] ? 'alert' : '' %>">
    <span class="icon">
      &#x2714; <%= flash[:notice] %> <!-- チェックマークアイコン -->
    </span>
  </div>
<% elsif flash[:alert] %>
  <div id="flash-message" class="flash-message <%= flash[:notice] ? 'notice' : flash[:alert] ? 'alert' : '' %>">
    <span class="icon">
      &#x26A0; <%= flash[:alert] %> <!-- 警告アイコン -->
    </span>
  </div>
<% end %>

<header class= "header_box">
  <div class= "header_left_box">
    <div class= "header_left_appTitle">Rabbit</div>
  </div>
  <div class= "header_right_box">
    <nav class= "header_navigation_box">
      <div class= "header_navigation_toggle" id= "toggle">
        <div class= "bar"></div>
        <div class= "bar"></div>
        <div class= "bar"></div>
      </div>
      <ul class= "header_navigation_menuList" id= "menu_list">
        <li class= "header_navigation_menuItem header_navigation_heading1">ユーザー</li>
        <% if user_signed_in? %>
          <li class= "header_navigation_menuItem">
            <%= link_to "マイページ", user_path(current_user), class: "link header_navigation_heading2" %>
          </li>
          <li class= "header_navigation_menuItem">
            <%= link_to "ログアウト", destroy_user_session_path, data: {turbo_method: :delete}, class: "link header_navigation_heading2" %>
          </li>
        <% else %>
          <li class= "header_navigation_menuItem">
            <%= link_to "新規登録", new_user_registration_path, class: "link header_navigation_heading2" %>
          </li>
          <li class= "header_navigation_menuItem">
            <%= link_to "ログイン", new_user_session_path, class: "link header_navigation_heading2" %>
          </li>
        <% end %>
        <li class= "header_navigation_menuItem">
          <%= link_to "タグ", tags_path, class: "link header_navigation_heading1" %>
        </li>
        <% Tag.all.each do |tag| %>
          <li class= "header_navigation_menuItem">
            <%= link_to tag.tag_name, tag_path(tag), class: "link header_navigation_heading2" %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>