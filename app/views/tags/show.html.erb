<% breadcrumb :tag, @tag %>

<div class= "tagsShow">
  <div class= "heading1_box">
    <div class= "heading1">#<%= @tag.tag_name %></div>
  </div>

  <div class= "search_box">
    <%= search_form_for @q, url: tag_path(@tag), class: "search_form" do |f| %>
      <%= f.search_field :title_cont, placeholder: "プロジェクト名で検索", class: "search_searchField" %>
      <%= f.submit "検索", class: "search_commit" %>
    <% end %>
  </div>

  <div class= "tagsShow_projects">
    <%= render partial: "projects/project", collection: @projects, locals: { tag: @tag } %>
  </div>
</div>