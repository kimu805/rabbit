<div class= "form_wrapper">

  <div class= "form_title_box">
    <span class= "form_title">ログイン</span>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form") do |f| %>
    <div class= "form_group">
      <div class= "form_label_box">
        <div class= "form_label"><%= f.label :email %></div>
        <div class= "form_required">必須</div>
      </div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form_textfield" %>
    </div>

    <div class= "form_group">
      <div class= "form_label_box">
        <div class= "form_label"><%= f.label :password %></div>
        <div class= "form_required">必須</div>
      </div>
      <%= f.password_field :password, autocomplete: "current-password", class: "form_textfield" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class= "form_group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class= "form_commit_box">
      <%= f.submit "ログイン", class: "form_commit" %>
    </div>
  <% end %>

</div>

