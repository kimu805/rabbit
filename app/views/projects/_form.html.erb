<%= form_with model: @project, local: true do |f| %>
  <div class= "field">
    <%= f.label :title %>
    <%= f.text_field :title, autofocut: true %>
  </div>

  <div class= "field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class= "field">
    <%= f.label :display %>
    <%= f.text_field :display %>
  </div>

  <div class= "action">
    <%= f.submit "作成" %>
  </div>
<% end %>